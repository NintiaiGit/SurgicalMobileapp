<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/sb_size_24">

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sb_size_24"
            android:layout_marginRight="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_24"
            android:textSize="@dimen/sb_text_size_24"
            android:textStyle="bold"
            android:textColor="@color/onlight_01"
            android:fontFamily="sans-serif"
            android:text="Patient Home "/>

        <!-- Display patient information -->
        <TextView
            android:id="@+id/patientInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sb_size_24"
            android:layout_marginRight="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_24"
            android:textSize="@dimen/sb_text_size_16"
            android:textColor="@color/onlight_01"
            android:fontFamily="sans-serif"/>

        <com.sendbird.uikit.samples.common.widgets.EntryButton
            android:id="@+id/preoperationnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Preoperative Briefing"
            android:layout_marginStart="@dimen/sb_size_24"
            android:layout_marginEnd="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_16"/>


        <com.sendbird.uikit.samples.common.widgets.EntryButton
            android:id="@+id/operationnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Surgical Procedure Briefing"
            android:layout_marginStart="@dimen/sb_size_24"
            android:layout_marginEnd="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_16"/>

        <com.sendbird.uikit.samples.common.widgets.EntryButton
            android:id="@+id/intraoperationfindingnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Operative Discoveries Report"
            android:layout_marginStart="@dimen/sb_size_24"
            android:layout_marginEnd="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_16"/>
        <com.sendbird.uikit.samples.common.widgets.EntryButton
            android:id="@+id/Complecationnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Intraoperative Complications Record"
            android:layout_marginStart="@dimen/sb_size_24"
            android:layout_marginEnd="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_16"/>
        <com.sendbird.uikit.samples.common.widgets.EntryButton
            android:id="@+id/postoperationnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Postoperative Report"
            android:layout_marginStart="@dimen/sb_size_24"
            android:layout_marginEnd="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_16"/>
        <com.sendbird.uikit.samples.common.widgets.EntryButton
            android:id="@+id/followupplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Postoperative Care Plan"
            android:layout_marginStart="@dimen/sb_size_24"
            android:layout_marginEnd="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_16"/>
        <com.sendbird.uikit.samples.common.widgets.EntryButton
            android:id="@+id/viewsurgicalnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Review  surgical document"
            android:layout_marginStart="@dimen/sb_size_24"
            android:layout_marginEnd="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_16"/>
        <com.sendbird.uikit.samples.common.widgets.EntryButton
            android:id="@+id/viewstandarddocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Inspect standard document"
            android:layout_marginStart="@dimen/sb_size_24"
            android:layout_marginEnd="@dimen/sb_size_24"
            android:layout_marginBottom="@dimen/sb_size_16"/>


